<Window size="550,500">
    <Font name="微软雅黑" size="12" default="true"/>
    <Font name="Consolas" size="12"/>
    <Vertical>
        <Vertical inset="5,5,5,5">
            <Container>
                <Horizontal name="main_wnd">
                    <!--最左边的整个竖栏-->
                    <Vertical width="110">
                        <!--上部分-->
                        <Vertical height="200">
                            <Horizontal width="110" height="160">
                                <!-- 左边的STATIC控件组 -->
                                <Vertical width="40" inset="0,3,0,0">
                                    <Control id="1071"/>
                                    <Control id="1072"/>
                                    <Control id="1073"/>
                                    <Control id="1074"/>
                                    <Control id="1075"/>
                                    <Control id="1076"/>
                                </Vertical>
                                <!-- 左边的Combo控件组 -->
                                <Vertical>
                                    <Control id="1002"/>
                                    <Control id="1005"/>
                                    <Control id="1006"/>
                                    <Control id="1007"/>
                                    <Control id="1008"/>
                                    <Control id="1050" inset="0,3,0,0"/>
                                </Vertical>
                            </Horizontal>
                            <!--更多设置 与 打开串口-->
                            <Horizontal height="40" width="100">
                                <Control id="1035" width="40"/>
                                <Control id="1009"/>
                            </Horizontal>
                        </Vertical>
                        <!--接收格式-->
                        <Container height="60">
                            <!--GroupBox-->
                            <Control id="1077"/>
                            <!--Options-->
                            <Vertical inset="10,15,5,5">
                                <Control id="1016"/>
                                <Control id="1017"/>
                            </Vertical>
                        </Container>
                        <Control height="5"/>
                        <!--发送格式-->
                        <Container name="send_fmt" height="60">
                            <!--GroupBox-->
                            <Control id="1078"/>
                            <!--Options-->
                            <Horizontal>
                                <Vertical inset="10,15,5,5">
                                    <Control id="1014"/>
                                    <Control id="1015"/>
                                </Vertical>
                                <Vertical width="30" inset="5,10,5,0">
                                    <Control/>
                                    <Control id="1068" height="20"/>
                                    <Control/>
                                </Vertical>
                            </Horizontal>
                        </Container>
                        <Control height="5"/>
                        <!--自动发送-->
                        <Container name="auto_send" height="44">
                            <!--GroupBox-->
                            <Control id="1079"/>
                            <!--Children-->
                            <Horizontal inset="10,18,5,5">
                                <Control id="1012" width="15"/>
                                <Control id="1013" inset="5,0,5,0"/>
                            </Horizontal>
                        </Container>
                        <!--简洁模式下左边加一个常用面板-->
                        <Vertical name="simple_mode_panel" height="40" visible="false">
                            <Control name="simple_mode_help_btn" id="1023" height="35" inset="5,0,5,5"/>
                        </Vertical>
                        <!--留空-->
                        <Control/>
                        <!--窗口置顶 & 简洁模式-->
                        <Control id="1018" height="20" inset="10,0,0,5"/>
                        <Control id="1081" height="20" inset="10,0,0,5"/>
                    </Vertical>
                    <!--右边整个部分-->
                    <Vertical>
                        <!--数据接收显示窗口-->
                        <Container name="recv_wnd" inset="10,5,5,5" minheight="200">
                            <Control id="1010" name="edit_recv_hex" font="1" visible="false"/>
                            <Control id="1033" name="edit_recv_char"/>
                        </Container>
                        <!--中间的按钮-->
                        <Horizontal name="recv_btns" height="30" inset="10,0,3,0">
                            <Control id="1024"/>
                            <Control id="1020"/>
                            <Control id="1029"/>
                            <Control id="1027"/>
                            <Control id="1023" width="60"/>
                        </Horizontal>
                        <!--发送数据窗口-->
                        <Container name="send_wnd" height="80" inset="10,5,5,5">
                            <Control id="1011" font="1"/>
                        </Container>
                        <!--下边部分-->
                        <Horizontal name="send_btns" height="60" inset="10,0,0,0">
                            <!--左边-->
                            <Vertical>
                                <!--下边按钮-->
                                <Horizontal height="36" inset="0,3,0,3">
                                    <Control id="1026"/>
                                    <Control id="1021"/>
                                    <Control id="1022"/>
                                    <Control id="1030"/>
                                </Horizontal>
                                <!--状态栏-->
                                <Control id="1019" height="24"/>
                            </Vertical>
                            <!--发送按钮-->
                            <Control id="1000" width="60" inset="10,5,0,5"/>
                        </Horizontal>
                    </Vertical>
                </Horizontal>
                <Container name="fullscreen_recv_rich_wnd" visible="false">
                    <Control id="1033" name="edit_recv_char"/>
                </Container>
            </Container>
        </Vertical>
    </Vertical>
</Window>
